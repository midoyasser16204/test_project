<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="user"
            type="com.example.myapplication.DisabilityData" /> <!-- Adjust the package name accordingly -->
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        android:background="@color/MainColor">

        <TextView
            android:id="@+id/profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Details"
            android:textSize="48sp"
            android:textColor="@color/ThirdlyColor"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Name Display -->
        <TextView
            android:id="@+id/Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/profile"
            android:textColor="@color/SecondaryColor"
            android:padding="12dp"
            android:text="@{user.name}" />

        <!-- Age Display -->
        <TextView
            android:id="@+id/age"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/Name"
            android:textColor="@color/SecondaryColor"
            android:padding="12dp"
            android:text="@{String.valueOf(user.age)}" />

        <!-- Phone Display -->
        <TextView
            android:id="@+id/phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/age"
            android:textColor="@color/SecondaryColor"
            android:padding="12dp"
            android:text="@{user.phone}" />

        <!-- Email Display -->
        <TextView
            android:id="@+id/Email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/phone"
            android:textColor="@color/SecondaryColor"
            android:padding="12dp"
            android:text="@{user.email}" />

        <!-- Skills Display -->
        <TextView
            android:id="@+id/skill"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/Email"
            android:textColor="@color/SecondaryColor"
            android:padding="12dp"
            android:text="@{user.skill}" />

        <!-- Disability TextView -->
        <TextView
            android:id="@+id/disabilitys"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Disability"
            android:textColor="@color/ThirdlyColor"
            app:layout_constraintTop_toBottomOf="@id/skill"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="16dp" />

        <TextView
            android:id="@+id/disability"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{user.disability}"
            android:textColor="@color/ThirdlyColor"
            app:layout_constraintTop_toBottomOf="@id/skill"
            app:layout_constraintStart_toEndOf="@id/disabilitys"
            android:layout_marginTop="16dp" />

        <!-- Upload CV Text -->
        <TextView
            android:id="@+id/uploadCv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/disability"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="@string/Upload_CV"
            android:textSize="18sp"
            android:textColor="@color/MainColor"
            android:gravity="center"
            android:layout_gravity="center" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
