<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="16dp"
    android:background="@color/MainColor">

    <TextView
        android:id="@+id/jobSeekerListTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Job_Seeker"
        android:textSize="48sp"
        android:textColor="@color/ThirdlyColor"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- RecyclerView for Job Seekers -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/jobSeekerRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        tools:listitem="@layout/item_layout"
        tools:itemCount="3"
        app:layout_constraintTop_toBottomOf="@id/jobSeekerListTitle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp" />
</androidx.constraintlayout.widget.ConstraintLayout>
